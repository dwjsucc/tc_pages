    <%= stylesheet_link_tag "common" %>
    <%= stylesheet_link_tag "bootstrap.min" %> 
    <%= stylesheet_link_tag "index" %> 
    <%= stylesheet_link_tag "personal" %> 
    <%= stylesheet_link_tag "buy" %>
    <%= javascript_include_tag "jquery-1.12.1.min" %>
    <%= javascript_include_tag "bootstrap.min" %>
    <%= javascript_include_tag "index" %>
    <%= javascript_include_tag "jianplaceholder" %>
    <%= javascript_include_tag "mobilenum" %> 
    <%= javascript_include_tag "script.js" %>
    <%= javascript_include_tag "appjs/layout.js" %>
    <%= javascript_include_tag "angular-1.5.8.js" %>
    <%= javascript_include_tag "appjs/personal.js" %>
</head>
<body ng-app="personal" ng-controller="personalcontroller">
<div class="personal">
    <div class="personal-left">
        <div class="touxiang"><img src="/assets/personal.png" alt=""/></div>
        <div class="username">我</div>
        <button class="personalbtn personalbtn1">个人信息</button>
        <!--<button class="personalbtn personalbtn1">我的订单</button>
        <button class="personalbtn">我的钱包</button>
        <button class="personalbtn">我的积分</button>
        <button class="personalbtn">我的优惠卷</button>-->
        <button class="personalbtn">意见反馈</button>
    </div>
    <div class="personal-right">
        <!-------------个人信息------------->
        <div class="rightinfo myorder  myrightinfo">
            <!--<div class="btntitle">个人信息</div>-->
            <div class="personalinfo">
                <span>头像</span>
                <div><img src="/assets/personal.png" alt=""/></div>
                <button>上传头像</button>
            </div>
            <div class="clear"></div>
            <ul>
                <li class="perinfo">
                    <span>昵称</span>
                    <input type="text" ng-model="nickName"/>
                </li>
                <li class="perinfo">
                    <span>手机</span>
                    <input type="text" ng-model="phone"/>
                </li>
                <li class="perinfo">
                    <span>邮箱</span>
                    <input type="text" ng-model="email"/>
                </li>
                <li class="perinfo perinfosex">
                    <span>性别</span>
                    <label><input name="sex" type="radio" value="" class="male"/>男</label>
                    <label><input name="sex" type="radio" value="" class="fmale"/>女</label>
                </li>
                <li class="perinfo perinfoedu">
                    <span>学历</span>
                    <select name="" id="">
                        <option value="0">请选择学历</option>
                        <option value="1">研究生</option>
                        <option value="2">本科</option>
                        <option value="3">专科</option>
                    </select>
                </li>
                <li class="perinfo perinfoedu">
                    <span>居住地</span>
                    <select name="" id="">
                        <option value="0">请选择地区</option>
                        <option value="1">北京</option>
                        <option value="2">天津</option>
                        <option value="3">上海</option>
                    </select>
                </li>
                <li class="perinfo">
                    <span></span>
                    <button class="certainbtn" ng-click="Yes()">确定</button>
                    <button class="cancelbtn" ng-click="No()">取消</button>
                </li>
            </ul>
            <div class="perxiu">修改密码</div>
            <ul>
                <li class="perinfo">
                    <span>原密码</span>
                    <input class="input" type="password" ng-model="oldpassword"/>
                </li>
                <li class="perinfo">
                    <span>新密码</span>
                    <input class="input" type="password" ng-model="newpassword"/>
                </li>
                <li class="perinfo">
                    <span>确认密码</span>
                    <input class="input" type="password" ng-model="confirmpassword"/>
                </li>
                <li class="perinfo">
                    <span></span>
                    <button class="certainbtn" ng-click="confirm()">确定</button>
                    <button class="cancelbtn" ng-click="cancel()">取消</button>
                </li>
            </ul>

        </div>

        <!-------------意见反馈------------->
        <div class="rightinfo">
            <div class="btntitle">意见反馈</div>
            <div class="feedback">
                <textarea name="" id="" cols="50" rows="50" placeholder="请在此输入反馈内容"></textarea>
            </div>
            <div class="textbtn">
                <button class="certainbtn">确定</button>
                <button class="cancelbtn">取消</button>
            </div>
        </div>
    </div>
</div>
</body>

<script>
$(function(){
    /**********左右边相应切换*************/
     var personalbtns=$(".personalbtn");
     var rightinfos=$(".rightinfo");
     personalbtns.click(function(){
         var index=personalbtns.index(this);
         personalbtns.removeClass("personalbtn1");
         $(this).addClass("personalbtn1");
         rightinfos.css("display","none");
         $(rightinfos[index]).css("display","block");
     });

    /**********评价按钮*************/
    var evaluatebtns=$(".evaluatebtn");
    var evaluate=$(".evaluate");
    evaluatebtns.click(function(){
        evaluate.css("display","block");
    });
    $("#evaluatecancel").click(function(){
        evaluate.css("display","none");
    });

    /**********支付按钮*************/
    $(".orderbtn").click(function(){
        $(".ordernum").css("display","block");
    });
    $(".ordercovbtn").click(function(){
        $(".ordernum").css("display","none");
    });

    /**********修改按钮*************/
    $(".modifybtn").click(function(){
        $(".modify").css("display","block");
    });
    $(".modifycovbtn").click(function(){
        $(".modify").css("display","none");
    });
    /******************************/
    var allyouhuis=$(".allyouhui");
    var youhuiquans=$(".youhuiquan");
    allyouhuis.click(function(){
        var index=allyouhuis.index(this);
        allyouhuis.removeClass("youhuicolor");
        $(this).addClass("youhuicolor");
        youhuiquans.css("display","none");
        $(youhuiquans[index]).css("display","block");
    });
 });
</script>
</html>