<script type="text/javascript">
	window.onload = Init;//网页加载完成时，调用init
	//设置定时器，图片轮播显示
	function Init()
    {
        //定时器,每秒钟触发ShowPicturesInOrder()函数
        window.setInterval("ShowPicturesInOrder()", 3000);
    }

    var Num = 0;
    function ShowPicturesInOrder()
    {
    	if(Num%2==0)
    	{
    		console.log("开始");
        	//获取网页中id=myImg的图片对象元素
        	$("h4").addClass("h4-1");
    	}
        else
        {
        	$("h4").removeClass("h4-1");
        }
        Num++;
    }
</script>

