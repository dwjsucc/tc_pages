<body ng-app="searchpassword_app" ng-controller="searchpassword_controller">
    <div class="bangding">
        <div class="shouji">找回密码:</div>
        <div class="bang">
            <span>手机号码：</span>
            <input type="text" placeholder="11位中国大陆手机号" id="mobilenum" class="reset_phone"/>
        </div>
        <div class="bang">
            <span>短信验证码：</span>
            <input type="text" placeholder="短信验证码" style="width: 240px" class="reset_message"/>
            <button id="obtainnum" ng-click="message()">获取验证码</button>
        </div>
        <div class="bang">
            <span>新密码：</span>
            <input type="password" class="reset_password" placeholder="请输入新密码"/>
        </div>
        <div class="bang">
            <span>确认新密码：</span>
            <input type="password" placeholder="请重新输入新密码" class="reset_password_ok"/>
        </div>
        <button class="determine" ng-click="resetpassword()">确定</button>
    </div>

</body> 
</html>